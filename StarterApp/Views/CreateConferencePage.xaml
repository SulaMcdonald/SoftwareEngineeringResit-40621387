<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarterApp.Views.CreateConferencePage"
             xmlns:vm="clr-namespace:StarterApp.ViewModels"
             Title="Create Conference">

    <ContentPage.BindingContext>
        <vm:CreateConferenceViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Entry Placeholder="Title" Text="{Binding Title}" />
            <Entry Placeholder="Location" Text="{Binding Location}" />
            <DatePicker Date="{Binding Date}" />
            <TimePicker Time="{Binding Time}" />
            <Entry Placeholder="Capacity" Keyboard="Numeric" Text="{Binding Capacity}" />
            <Button Text="Create" Command="{Binding CreateConferenceCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
